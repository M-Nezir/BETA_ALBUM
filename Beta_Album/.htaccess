RewriteEngine On
RewriteBase /BETA_ALBUM/Beta_Album/

# URL'nin başında /BETA_ALBUM/Beta_Album/ yoksa, ekle
RewriteCond %{REQUEST_URI} !^/BETA_ALBUM/Beta_Album/
RewriteRule ^(.*)$ BETA_ALBUM/Beta_Album/$1 [L]

# .php uzantısını gizle
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

# Varsayılan olarak index.php'yi çalıştır
DirectoryIndex index.php
